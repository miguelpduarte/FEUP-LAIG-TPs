        </primitive >
        <primitive id="prim16">
            <rectangle x1="2" y1="1" x2="3" y2="2" />
        </primitive >
        <primitive id="prim17">
            <rectangle x1="3" y1="2" x2="4" y2="3" />
        </primitive >
